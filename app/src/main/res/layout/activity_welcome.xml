<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@color/white"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/hole_track"
        android:layout_width="115dp"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/hole_track"
        android:textSize="21sp"
        android:contentDescription="@string/icon_representing_hole_track"/>


    <ImageView
        android:id="@+id/crack_pothole"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/crack_pothole"
        android:contentDescription="@string/crack_on_the_road_surface"/>


    <TextView
        android:id="@+id/detect_preserve"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="370dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/dspp"
        android:textSize="36sp"
        android:layout_below="@id/hole_track"
        android:layout_alignParentStart="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/connect_conquer"
        android:layout_width="234dp"
        android:layout_height="14dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ccc"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detect_preserve"
        android:gravity="center"/>

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:background="@drawable/button_background"
        android:textSize="32sp"
        android:text="@string/get_started"/>


</RelativeLayout>
